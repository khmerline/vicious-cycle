<div class="page-header">
  <%= link_to products_path, :class => 'btn btn-danger' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_product_path(@product), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h3>Show product</h3>
</div>

<div class="row">
  <div class="col-sm-3">
    <%= image_tag @product.image(:medium) %>
  </div>
  <div class="col-sm-6">
    <dl class="dl-horizontal">
      <dt>Title:</dt>
      <dd><%= @product.title %></dd>

      <dt>Brand:</dt>
      <dd><%= @product.catalog %></dd>

      <dt>Type:</dt>
      <dd><%= @product.product_type %></dd>

      <dt>Color:</dt>
      <dd><%= @product.color %></dd>

      <dt>Price:</dt>
      <dd><%= number_to_currency @product.price %></dd>

      <dt>Discount:</dt>
      <dd><%= @product.discount+"%" %></dd>

      <dt>Discount Price:</dt>
      <dd><%= number_to_currency discount_price(@product) %></dd>

      <dt>Description:</dt>
      <dd><%= @product.description %></dd>
    </dl>
  </div>
</div>
