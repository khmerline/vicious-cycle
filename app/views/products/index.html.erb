<div class="page-header">
  <%= link_to new_product_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Product
  <% end %>
  <h3>All products</h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Color</th>
        <th>Brand</th>
        <th>Type</th>
        <th>Description</th>
        <th>Discount</th>
        <th>Price</th>
        <th>Discount Price</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @products) do |product| %>
        <td><%= image_tag product.image(:thumb) %></td>
        <td><%= product.title.capitalize %></td>
        <td><%= product.color.capitalize %></td>
        <td><%= product.catalog.capitalize %></td>
        <td><%= product.product_type.capitalize %></td>
        <td><%= truncate(product.description.capitalize, lenght:100) %></td>
        <td><%= product.discount+"%" %></td>
        <td><%= number_to_currency (product.price) %></td>
        <td><%= number_to_currency discount_price(product) %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
